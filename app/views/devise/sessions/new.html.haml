- provide(:title, "ログイン | 108文字のとはペディア")
.signup__wrapper
  %h3 ログイン
  .signup__form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        .field
          = f.email_field :email, autofocus: true, placeholder: 'メールアドレス', class: "form-control"
      .form-group
        .field
          = f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control"
        - if devise_mapping.rememberable?
          .field.signup__form--memory
            = f.label :パスワードを記憶
            = f.check_box :remember_me
      .form-group
        .text-right
          .actions
            = f.submit "ログイン", class: "btn btn-primary"

