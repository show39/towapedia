.row
  .col-md-3.left-content
    = render 'shared/user_info'
    = render 'shared/towa_form'
  .col-md-9
    .mypedia__username
      %h2 #{@user.name}さんのマイペディア一覧
    %ul
      .row.o-3column
        - @meanings.each do |meaning|
          .col-md-4.col-sm-6
            %li.meaning__box.clearfix
              %h2
                = link_to "#{meaning.towa.towa + "とは"}", "/towas/#{meaning.towa.id}", method: :get
              = simple_format(meaning.meaning, class: "meaning__box-meaning")
              .meaning__box-user-shumbnail
                = image_tag "userthumbnail.png", class: "meaning__box-user-image"
              %p.meaning__box-user-name
                = meaning.user.name
              %p.meaning__box-user-title
                = meaning.user.title
