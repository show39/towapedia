.user-info
  .account_image-box
    = image_tag "useraccount.png", class: "account_image"
  %p.user-name
    = current_user.name
  %p.user-title
    = current_user.title
  %p.user-profile
    = current_user.profile
  .scores.row
    .telegram
      %i.fa.fa-telegram
      %span.telegram__score #{current_user.meanings.count}
    .pipe|
    .light
      %span.light__icon= image_tag "light-on.jpg", size: "25x25"
      %span.light__score #{Light.where(meaning_id: @current_user_meanings.ids).sum(:score)}
